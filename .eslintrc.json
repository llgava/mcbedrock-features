{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": ["prettier"],
  "plugins": ["prettier"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],

    "prettier/prettier": [
      "error",
      {},
      { "usePrettierrc": true }
    ]
  }
}